<Window x:Class="Autoinstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Autoinstaller.ViewModels"
        Title="AutoInstaller by ITS" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель редактирования настроек сети -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="IP:" FontSize="14" FontWeight="Bold" Margin="0,0,5,5"/>
                <TextBlock Text="Маска:" FontSize="14" FontWeight="Bold" Margin="0,0,5,5"/>
                <TextBlock Text="Шлюз:" FontSize="14" FontWeight="Bold" Margin="0,0,5,5"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <TextBox Text="{Binding LocalIpAddress, Mode=TwoWay}" FontSize="14" Margin="0,0,80,5"/>
                <TextBox Text="{Binding LocalSubnetMask, Mode=TwoWay}" FontSize="14" Margin="0,0,80,5"/>
                <TextBox Text="{Binding LocalGateway, Mode=TwoWay}" FontSize="14" Margin="0,0,80,5"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <Button Content="Сохранить" Command="{Binding SaveNetworkSettingsCommand}" 
                HorizontalAlignment="Right" Margin="0,0,0,5" Grid.Column="1" Width="78" Height="72"/>
            </StackPanel>
        </Grid>

        <!-- Таблица программ -->
        <DataGrid ItemsSource="{Binding ProgramList}"
                  AutoGenerateColumns="False"
                  Grid.Row="1"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsSelected}" Header="Выбрать"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Программа" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Status}" Header="Статус" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка установки -->
        <Button Content="Установить выбранное"
                Command="{Binding InstallSelectedCommand}"
                HorizontalAlignment="Right"
                Width="150" Height="30"
                Grid.Row="2"/>
    </Grid>
</Window>
